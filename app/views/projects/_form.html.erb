<%= form_for @project do |f| %>

<!--List and show all error messages-->
<% if @project.errors.any? %>
<div class="error_messages">
	<h2>Form is invalid</h2>
	<ul>
		<% @project.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<ul class="form-style-1">
<!--Form for editing-->
<li>
	<%= f.label :name, 'Project Name' %>
	<%= f.text_field :name, placeholder: "What the name of your project?", class: "field-long" %>
</li>

<li>
	<%= f.label :description, 'Project Description' %>
	<%= f.text_area :description, placeholder: "What your project will do?", class: "field-long field-textarea" %>
</li>

<li>
	<%= f.label :budget, 'Project Budget' %>
	<%= f.number_field :budget, placeholder: "How much it will cost?", class: "field-long" %>
</li>

<li>
	<%= f.label :start_date, 'Start Date' %>
	<%= f.date_field :start_date, as: :date, placeholder: "dd/mm/yyyy" %>
</li>

<li><%= f.submit 'Submit', class: 'submit-bnt' %></li>
</ul>
<% end %>