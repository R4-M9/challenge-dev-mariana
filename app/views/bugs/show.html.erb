<!--Show all bug's attributes-->
<h1><%= @bug.name %></h1>

<p>Type: <%= @bug.bug_type %></p>

<p>Description: <%= @bug.description %></p>

<p>Project: <%= Project.find_by(id: @bug.project_id).name %></p>

<p>Created by: <%= User.find_by(id: @bug.user_id).name %></p>

<p>Solve: <%= bool_to_str(@bug.solve) %></p>

<!--Links to edit/delete/solve the bug or return to all bugs-->
<button class="button"><%= link_to 'All Bugs', bugs_path %></button>

<!--Only shows edit/solve/delete if a bug is not yet solved-->
<% if @bug.solve == false %>
  <button class="button"><%= link_to 'Edit', edit_bug_path(@bug) %></button>
  <button class="button"><%= link_to "Solve", solve_path(@bug), method: :put %></button>
<% end %>

<button class="button"><%= link_to 'Delete', bug_path(@bug), method: :delete, data:{ confirm: 'Are you sure?'} %></button>
