<p id="notice"><%= notice %></p>

<h1>Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th>Solve</th>
      <th>Project</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= link_to bug.name, bug %></td>
        <td><%= bug.bug_type %></td>
        <td><%= bug.description %></td>
        <td><%= bug.solve %></td>
        <td><%= Project.find_by(id: bug.project_id).name %></td>
        <td><%= User.find_by(id: bug.user_id).name %></td>
        <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
        <td><%= link_to "Solve", solve_path(bug), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to "Home", home_path %> |
  <%= link_to 'New Bug', new_bug_path %>
</p>

